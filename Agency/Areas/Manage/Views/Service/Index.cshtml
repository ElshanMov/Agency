@model List<Service>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary float-left" asp-action="create">Create</a>
            <h1 class="d-inline-block float-right">Services</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">SubTitle</th>
                        <th scope="col">Icon</th>
                        <th scope="col">ServiceName</th>
                        <th scope="col">ServiceDesc</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>
                                @item.Title
                                @if (item.IsDeleted == true)
                                {<span class="badge bg-danger">Deleted</span>}
                            </td>
                            <td>@(item.SubTitle.Length > 9 ? item.SubTitle.Substring(0, 9):item.SubTitle)...</td>
                            <td>@Html.Raw(item.Icon)</td>
                            <td>@item.ServiceName</td>
                            <td>@(item.ServiceDesc.Length > 9 ? item.ServiceDesc.Substring(0, 9):item.ServiceDesc) ...</td>
                            <td>
                                <a class="btn btn-warning" asp-action="edit" asp-route-id="@item.Id" asp-controller="service">Edit</a>
                                <a class="btn btn-danger delete-btn" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
